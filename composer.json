{
    "name": "alpipego/resizefly",
    "description": "Dynamically resize WordPress images on the fly",
    "license": "MIT",
    "type": "wordpress-plugin",
    "autoload": {
        "psr-4": {
            "Alpipego\\Resizefly\\": "src/"
        }
    },
    "require": {
        "php": ">=5.6",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "pimple/pimple": "^3.1.0",
        "psr/container": "^1.0",
        "wapmorgan/php-code-analyzer": "^1.0",
        "sebastian/phpcpd": "^4.1",
        "roave/backward-compatibility-check": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpmetrics/phpmetrics": "^2.4"
    },
    "scripts": {
        "post-update-cmd": ["grunt third-party"]
    }
}
